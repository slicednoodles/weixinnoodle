<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>NoodleTravelAssistant</display-name>
  <!-- 景点印象 -->
  <servlet>
    <servlet-name>travelTourDesc</servlet-name>
    <servlet-class>com.noodle.travel.assistant.servlet.TravelTourDescServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>travelTourDesc</servlet-name>
    <url-pattern>/travelTourDesc</url-pattern>
  </servlet-mapping>
  
  <!-- 游记攻略 -->
  <servlet>
    <servlet-name>travelNote</servlet-name>
    <servlet-class>com.noodle.travel.assistant.servlet.TravelNoteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>travelNote</servlet-name>
    <url-pattern>/travelNote</url-pattern>
  </servlet-mapping>
  
  <!-- 搜索酒店 -->
  <servlet>
    <servlet-name>hotelServlet</servlet-name>
    <servlet-class>com.noodle.travel.assistant.servlet.HotelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hotelServlet</servlet-name>
    <url-pattern>/hotelServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 盗取链接 -->
  <servlet>
    <servlet-name>getLinkSrc</servlet-name>
    <servlet-class>com.noodle.travel.assistant.servlet.GetLinkSrcServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getLinkSrc</servlet-name>
    <url-pattern>/link</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>